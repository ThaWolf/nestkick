version: '3.8'

services:
  app:
    container_name: <%= projectName %>-app-prod
    build:
      context: .
      dockerfile: Dockerfile.prod
    ports:
      - "3000:3000"
    environment:
      - NODE_ENV=production
      - PORT=3000
      - DATABASE_URL=${DATABASE_URL}
      - DB_HOST=${DB_HOST}
      - DB_PORT=${DB_PORT}
      - DB_USERNAME=${DB_USERNAME}
      - DB_PASSWORD=${DB_PASSWORD}
      - DB_DATABASE=${DB_DATABASE}
    depends_on:
      database:
        condition: service_healthy
    networks:
      - nestkick-network
    restart: unless-stopped
    deploy:
      resources:
        limits:
          memory: 512M
        reservations:
          memory: 256M

  database:
    container_name: <%= projectName %>-database-prod
    # Database service will be overridden by specific templates
    image: placeholder
    environment:
      - placeholder=true
    volumes:
      - db_data:/var/lib/db
    networks:
      - nestkick-network
    restart: unless-stopped
    deploy:
      resources:
        limits:
          memory: 1G
        reservations:
          memory: 512M

  nginx:
    container_name: <%= projectName %>-nginx
    image: nginx:alpine
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
      - ./ssl:/etc/nginx/ssl:ro
    depends_on:
      - app
    networks:
      - nestkick-network
    restart: unless-stopped

volumes:
  db_data:

networks:
  nestkick-network:
    driver: bridge 