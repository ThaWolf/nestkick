-- Initialize MySQL database for <%= projectName %>
-- This script runs when the MySQL container starts for the first time

-- Create database if it doesn't exist
CREATE DATABASE IF NOT EXISTS `<%= projectName %>` CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;

-- Use the database
USE `<%= projectName %>`;

-- Create a dedicated user for the application (optional)
-- CREATE USER 'nestkick_user'@'%' IDENTIFIED BY 'nestkick_password';
-- GRANT ALL PRIVILEGES ON `<%= projectName %>`.* TO 'nestkick_user'@'%';
-- FLUSH PRIVILEGES;

-- Set timezone
SET time_zone = '+00:00';

-- Enable foreign key checks
SET FOREIGN_KEY_CHECKS = 1; 