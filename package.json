{
  "name": "nestkick",
  "version": "1.0.0",
  "description": "Kickstart your NestJS projects with style - A powerful CLI tool for scaffolding production-ready NestJS applications",
  "main": "dist/index.js",
  "bin": {
    "nestkick": "./dist/index.js"
  },
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && cp -r templates dist/",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:coverage:check": "vitest --coverage --reporter=verbose",
    "test:docker": "./scripts/test-docker-builds.sh",
    "test:templates": "./scripts/test-template-validation.sh",
    "test:integration": "npm run test:docker",
    "test:all": "npm run test && npm run test:templates && npm run test:docker",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "package:all": "npm run build && pkg dist/index.js --targets node18-linux-x64,node18-macos-x64,node18-win-x64,node18-linux-arm64,node18-macos-arm64 --out-path dist",
    "package:linux": "npm run build && pkg dist/index.js --targets node18-linux-x64,node18-linux-arm64 --out-path dist",
    "package:macos": "npm run build && pkg dist/index.js --targets node18-macos-x64,node18-macos-arm64 --out-path dist",
    "package:windows": "npm run build && pkg dist/index.js --targets node18-win-x64 --out-path dist",
    "release:prepare": "npm run build && npm run test && npm run lint",
    "release:build": "npm run package:all",
    "prepare": "husky"
  },
  "keywords": [
    "nestjs",
    "cli",
    "scaffolding",
    "generator",
    "template",
    "docker",
    "prisma",
    "typeorm",
    "sequelize",
    "postgresql",
    "mysql",
    "sqlite",
    "mongodb"
  ],
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "author": "Nestkick Team",
  "license": "MIT",
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "templates/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ThaWolf/nestkick.git"
  },
  "bugs": {
    "url": "https://github.com/ThaWolf/nestkick/issues"
  },
  "homepage": "https://github.com/ThaWolf/nestkick#readme",
  "dependencies": {
    "@prisma/client": "^6.11.1",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "ejs": "^3.1.10",
    "execa": "^9.6.0",
    "figlet": "^1.8.2",
    "fs-extra": "^11.3.0",
    "inquirer": "^12.7.0",
    "ora": "^8.2.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/ejs": "^3.1.5",
    "@types/figlet": "^1.7.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^24.0.13",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.25.6",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "pkg": "^5.8.1",
    "prettier": "^3.6.2",
    "prisma": "^6.11.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
